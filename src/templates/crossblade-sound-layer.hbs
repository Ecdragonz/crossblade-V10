<div class="crossblade-sound-layer" data-layer="{{index}}">
    <h4 class="section-header">
        <span class="header-label">ðŸ”Š{{ localize "CROSSBLADE.Sound.Layer.Name" }}</span>
        <span class="fill"></span>
        <a class="crossblade-click-control delete-crossblade-sound-layer" title="{{localize 'CROSSBLADE.Sound.Layer.Remove'}}">
            <i class="fas fa-minus"></i>
        </a>
    </h4>

    <div class="form-group">
        <label>{{ localize "CROSSBLADE.Sound.Layer.SoundSrc" }}</label>
        <div class="form-fields">
            {{filePicker target=(concat "flags.crossblade.soundLayers." index ".src") type="audio"}}
            <input class="audio crossblade-layer-src" type="text" name="flags.crossblade.soundLayers.{{index}}.src" placeholder="path/audio.mp3" value="{{src}}"/>
        </div>
    </div>
    <div class="form-group">
        <label>{{ localize "CROSSBLADE.Sound.Layer.SoundVolume.Name" }}</label>
        <div class="form-fields">
            <input type="checkbox" class="crossblade-change-control toggle-crossblade-sound-layer-volume" title="{{ localize "CROSSBLADE.Sound.Layer.SoundVolume.Hint" }}" {{#if volumeAdjustment includeZero=true }}checked{{/if}} />
            <input type="range" class="crossblade-sound-layer-volume" {{#unless volumeAdjustment includeZero=true }}disabled{{/unless}} name="flags.crossblade.soundLayers.{{index}}.volumeAdjustment" title="{{ localize "CROSSBLADE.Sound.Layer.SoundVolume.Hint" }}" value="{{#if volumeAdjustment includeZero=true }}{{ volumeAdjustment }}{{else}}1{{/if}}" min="0" max="1" step="0.05" tabindex="-1">
        </div>
    </div>
    <div class="form-group row">
        <label>{{localize "CROSSBLADE.Sound.Layer.EventTrigger"}}</label>
        <div class="crossblade-events">
            <div class="section-header">
                <span class="fill"></span>
                <a class="crossblade-click-control add-crossblade-event" title="{{localize 'CROSSBLADE.Sound.Layer.Event.Add'}}">
                    <i class="fas fa-plus"></i>
                </a>
            </div>
            {{#each events}}
                {{> crossbladeSoundEvent layerIndex=../index eventIndex=@index crossbladeEvents=../crossbladeEvents}}
            {{/each}}
        </div>
    </div>
</div>
  